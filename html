<script>
function recommendChannel() {
  const now = new Date();
  const hour = now.getHours();
  document.getElementById('current-time').innerText = "Current Time: " + hour + ":00";

  let channel;

  if (hour >= 6 && hour < 9) {
    channel = "ðŸ“° News Channel";
  } else if (hour >= 9 && hour < 17) {
    channel = "ðŸ“š Educational Channel";
  } else if (hour >= 17 && hour < 21) {
    channel = "ðŸŽ­ Entertainment Channel";
  } else {
    channel = "ðŸŽ¬ Movie Channel";
  }

  document.getElementById("recommendation").innerText = "Recommended: " + channel;
}
</script>

